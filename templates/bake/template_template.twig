
/**
 * Шаблон для компонента "{{ name }}".
 */
export default {

	render( props ) {
		return `${this.css( props )}`;
	},

	/**
	 * Кэширование элементов компонента для теневой модели.
	 */
	mapDom( scope ) {
		return {
			oneDiv: scope.querySelector('.ddt'),// Для примера.
		}
	},

	/**
	 * Перемещает стили в компонент.
	 */
	css( p ) { return `
		<style>
			:host { color: red; }// Для {{ name }}.
		</style>`;
	},
	
	/**
	 * AJAX-запрос.
	 */
	ajax( url ) {
		const request = new XMLHttpRequest();
		request.open( 'GET', url, true );
		request.addEventListener( 'load', (e) => {
			this.querySelect( 'brunov-{{ name }}.{{ name }}' ).innerHTML = e.target.response;
		});
		request.send();
	},
}

